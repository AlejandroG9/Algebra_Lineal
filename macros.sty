%========================
% ejercicioSol: una sola caja con/ sin solución
%========================
\RequirePackage{environ}
\makeatletter
\newcommand\ej@upper{}
\newcommand\ej@lower{}
\long\def\ej@split#1\tcblower#2\@nil{\def\ej@upper{#1}\def\ej@lower{#2}}

\NewEnviron{ejercicioSol}[1][]{%
  \refstepcounter{ctrEjercicio}%
  \def\ej@upper{}\def\ej@lower{}%
  \expandafter\ej@split\BODY\tcblower\@nil
  \ifshowsolutions
    \begin{tcolorbox}[estiloEjSol, title={Ejercicio \thectrEjercicio}, bicolor,
      colbacklower=blue!5!white,
      before lower={\textbf{Solución}\par\medskip}, #1]
      \ej@upper
    \tcblower
      \ej@lower
    \end{tcolorbox}
  \else
    \begin{tcolorbox}[estiloEjSol, title={Ejercicio \thectrEjercicio}, #1]
      \ej@upper
    \end{tcolorbox}
  \fi
}
\makeatother

%========================
% ejercicio + \muestraSolucion (compatibilidad)
%========================
\makeatletter
\newcommand\ej@pendiente{}
\newif\ifej@tiene

\NewEnviron{ejercicio}{%
  \global\let\ej@pendiente\BODY
  \ej@tienetrue
  \ifshowsolutions
    % Se imprimirá al llamar \muestraSolucion
  \else
    \refstepcounter{ctrEjercicio}%
    \begin{tcolorbox}[estiloEjSol, title={Ejercicio \thectrEjercicio}]
      \ej@pendiente
    \end{tcolorbox}%
    \gdef\ej@pendiente{}%
    \ej@tienefalse
  \fi
}

\newcommand{\muestraSolucion}[1]{%
  \ifshowsolutions
    \refstepcounter{ctrEjercicio}%
    \begin{tcolorbox}[estiloEjSol, title={Ejercicio \thectrEjercicio}, bicolor,
      colbacklower=blue!5!white,
      before lower={\textbf{Solución}\par\medskip}]
      \ej@pendiente
    \tcblower
      #1%
    \end{tcolorbox}%
  \fi
  \gdef\ej@pendiente{}%
  \ej@tienefalse
}
\makeatother

