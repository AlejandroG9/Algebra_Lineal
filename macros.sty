% Entornos estándar del problemario
\newenvironment{objetivos}{
  \section*{\textcolor{alAzul}{Objetivos de aprendizaje}}
  \begin{itemize}[leftmargin=1.25cm]
}{
  \end{itemize}
}

\newenvironment{marcoteorico}{
  \section*{\textcolor{alAzul}{Marco teórico}}
  \begin{itemize}[leftmargin=1.25cm]
}{
  \end{itemize}
}

\newenvironment{ejemplos}{
  \section*{\textcolor{alMorado}{Ejemplos guiados}}
  \begin{enumerate}[label=\textbf{Ejemplo \arabic*.}, leftmargin=1.25cm]
}{
  \end{enumerate}
}

\newenvironment{actividad}[1]{
  \section*{\textcolor{alVerde}{Actividad #1}}
  \begin{enumerate}[label=\arabic*), leftmargin=1.25cm]
}{
  \end{enumerate}
}

\newenvironment{retos}{
  \section*{\textcolor{alMorado}{Retos}}
  \begin{enumerate}[label=\textbf{Reto \arabic*.}, leftmargin=1.25cm]
}{
  \end{enumerate}
}

